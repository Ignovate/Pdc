<?xml version="1.0"?>
<config>
    <api2>
        <resource_groups>
            <mobile_app translate="title" module="dever_app">
                <title>Mobile App</title>
                <sort_order>1</sort_order>
            </mobile_app>
        </resource_groups>
        <resources>
            <customer_api2 translate="title" module="dever_app">
                <group>mobile_app</group>
                <title>Customer</title>
                <sort_order>1</sort_order>
                <model>dever_app/api2_customer</model>
                <privileges>
                    <admin>
                        <create>1</create>
                    </admin>
                </privileges>
                <routes>
                    <route_collection_create_customerv2>
                        <route>/customer</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_create_customerv2>
                </routes>
                <versions>1</versions>
            </customer_api2>
            <homescreen_api2>
                <group>mobile_app</group>
                <title>Homescreen</title>
                <sort_order>1</sort_order>
                <model>dever_app/api2_homescreen</model>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                </privileges>
                <routes>
                    <route_collection_homescreen>
                        <route>/homescreen/store/:store/limit/:limit</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_homescreen>
                </routes>
                <versions>1</versions>
            </homescreen_api2>
            <cart_api2>
                <group>mobile_app</group>
                <title>Cart</title>
                <sort_order>1</sort_order>
                <model>dever_app/api2_cart</model>
                <privileges>
                    <admin>
                        <create>1</create>
                        <update>1</update>
                        <retrieve>1</retrieve>
                        <delete>1</delete>
                    </admin>
                </privileges>
                <routes>
                    <route_collection_cart_v2>
                        <route>/addcart</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_cart_v2>
                    <route_entity_update_cart_v2>
                        <route>/addcart/:quote_id</route>
                        <action_type>entity</action_type>
                        <version>2</version>
                    </route_entity_update_cart_v2>
                    <route_entity_get_cart_v2>
                        <route>/cart/:quote_id</route>
                        <action_type>entity</action_type>
                        <version>2</version>
                    </route_entity_get_cart_v2>
                    <route_entity_delete_cart_v2>
                        <route>/cart/:quote_id/product/:item_id</route>
                        <action_type>entity</action_type>
                        <version>2</version>
                    </route_entity_delete_cart_v2>
                </routes>
                <versions>1</versions>
            </cart_api2>
            <order_api2>
                <group>mobile_app</group>
                <title>Order</title>
                <sort_order>1</sort_order>
                <model>dever_app/api2_order</model>
                <privileges>
                    <admin>
                        <create>1</create>
                        <retrieve>1</retrieve>
                        <update>1</update>
                    </admin>
                </privileges>
                <routes>
                    <route_collection_order_v2>
                        <route>/processorder</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_order_v2>
                    <route_entity_order_get_v2>
                        <route>/order/:id</route>
                        <action_type>entity</action_type>
                        <version>2</version>
                    </route_entity_order_get_v2>
                </routes>
                <versions>1</versions>
            </order_api2>
            <order_cancel_api2>
                <group>mobile_app</group>
                <title>Order Cancel</title>
                <sort_order>1</sort_order>
                <model>dever_app/api2_order_cancel</model>
                <privileges>
                    <admin>
                        <update>1</update>
                    </admin>
                    <guest>
                        <update>1</update>
                    </guest>
                </privileges>
                <routes>
                    <route_entity_order_cancel_v2>
                        <route>/ordercancel/:id</route>
                        <action_type>entity</action_type>
                        <version>2</version>
                    </route_entity_order_cancel_v2>
                </routes>
                <versions>1</versions>
            </order_cancel_api2>
            <customer_orders_api2 translate="title" module="dever_app">
                <group>mobile_app</group>
                <title>Customer Orders</title>
                <sort_order>1</sort_order>
                <model>dever_app/api2_customer_orders</model>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                </privileges>
                <routes>
                    <route_entity_order_historyv2>
                        <route>/customer/orders/:id</route>
                        <action_type>entity</action_type>
                        <version>2</version>
                    </route_entity_order_historyv2>
                </routes>
                <versions>1</versions>
            </customer_orders_api2>
            <customer_wishlist_api2>
                <group>mobile_app</group>
                <title>Customer Wishlist</title>
                <sort_order>1</sort_order>
                <model>dever_app/api2_customer_wishlist</model>
                <privileges>
                    <admin>
                        <create>1</create>
                        <retrieve>1</retrieve>
                        <delete>1</delete>
                    </admin>
                </privileges>
                <routes>
                    <route_collection_customer_wishlist>
                        <route>/wishlist/:customer_id</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_customer_wishlist>
                    <route_entity_customer_wishlist>
                        <route>/wishlist/:customer_id/product/:product_id</route>
                        <action_type>entity</action_type>
                        <version>2</version>
                    </route_entity_customer_wishlist>
                </routes>
                <versions>1</versions>
            </customer_wishlist_api2>
            <customer_notification_list_api2>
                <group>mobile_app</group>
                <title>Customer Notification List</title>
                <sort_order>1</sort_order>
                <model>dever_app/api2_customer_notification</model>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                </privileges>
                <routes>
                    <route_collection_customer_notification>
                        <route>/notification/:customerid</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_customer_notification>
                </routes>
                <versions>1</versions>
            </customer_notification_list_api2>
            <customer_fcm_api2>
                <group>mobile_app</group>
                <title>Customer Fcm</title>
                <sort_order>1</sort_order>
                <model>dever_app/api2_customer_fcm</model>
                <privileges>
                    <admin>
                        <delete>1</delete>
                    </admin>
                </privileges>
                <routes>
                    <route_entity_customer_fcm>
                        <route>/customer/fcm/:fcmid</route>
                        <action_type>entity</action_type>
                        <version>2</version>
                    </route_entity_customer_fcm>
                </routes>
                <versions>1</versions>
            </customer_fcm_api2>
        </resources>
    </api2>
</config>
